<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_info2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/nexon"
        android:textStyle="bold"
        android:text="[ Information ]"
        android:textSize="24sp"
        android:background="#CCFFFF"
        />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/nexon"
        android:text="\n1. 화면 가운데에 맞추어 촬영해주세요.\n\n2. 총 5회 진행해주세요. 이때 최대한 동일한 속도로 진행하셔야, 분석이 잘 됩니다.\n\n* 주의 *\n영상에 본인 이외의 사람이 함께 나올 경우 관절 좌표가 제대로 출력되지 않을 수 있습니다!"
        android:textSize="20sp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_info"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-229dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="@font/nexon"
        android:text="모든 준비가 완료되었다면 시작 버튼을 눌러주세요!"
        android:textSize="20sp" />

    <Button
        android:id="@+id/upload_button"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_background"
        android:fontFamily="@font/nexon"
        android:layout_marginTop="30dp"
        android:text="운동 시작" />

</LinearLayout>